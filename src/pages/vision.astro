---
// src/pages/vision.astro
import Layout from '../layouts/Layout.astro';
import VisionSlider from '../components/react/VisionSlider';
---

<Layout title="Nebula - Vision">
  <main class="w-full h-screen bg-black overflow-hidden relative">
    
    <div class="absolute top-0 left-0 w-full h-40 bg-gradient-to-b from-black/90 via-black/60 to-transparent z-30 pointer-events-none"></div>

    <div class="absolute top-32 left-0 w-full z-40 px-8 flex justify-between items-start pointer-events-none">
      <div>
        <h1 class="text-4xl md:text-6xl font-bold text-white tracking-tighter">
            SUPER<span class="text-nebula-blue">VISION</span>
        </h1>
        <p class="text-gray-300 mt-2 max-w-md text-sm md:text-base bg-black/20 backdrop-blur-sm p-2 rounded border-l-2 border-nebula-blue/50">
            Rain, fog, or total darkness. Nebula's Lidar array sees the world in 
            millimeter-accurate 3D point clouds, identifying threats before you even see them.
        </p>
      </div>
    </div>

    <section class="w-full h-full">
        <VisionSlider client:only="react" />
    </section>

    <div class="absolute bottom-32 left-1/2 -translate-x-1/2 z-40 pointer-events-none opacity-50 animate-pulse">
        <p class="text-[10px] uppercase tracking-[0.3em] text-white">Drag to Compare</p>
    </div>

  </main>
</Layout>