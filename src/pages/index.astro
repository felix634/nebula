---
import Layout from '../layouts/Layout.astro';
import PersistentCar from '../components/global/PersistentCar.astro';
---

<Layout title="Nebula Motors | The Future">
  <PersistentCar viewState="center" />

  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <video autoplay loop muted playsinline class="absolute inset-0 w-full h-full object-cover opacity-60">
      <source src="/neon-tunnel.mp4" type="video/mp4" />
    </video>
    
    <div class="relative z-0 text-center">
      <h1 class="text-[12rem] font-bold leading-none tracking-tighter text-white mix-blend-overlay">
        NEBULA
      </h1>
      <p class="text-xl tracking-[0.5em] text-nebula-blue mt-4 uppercase">Silence is the new loud</p>
    </div>
  </section>
  
  <section class="h-screen bg-nebula-black flex items-center justify-center">
    <h2 class="text-4xl text-gray-500">Scroll Linked Video Section Here</h2>
  </section>
</Layout>