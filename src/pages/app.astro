---
import Layout from '../layouts/Layout.astro';
import PhoneDemo from '../components/react/PhoneDemo';
---

<Layout title="App - Nebula One">
  
  <div class="fixed top-0 left-0 w-full h-24 bg-black/90 backdrop-blur-md z-40 border-b border-white/5"></div>

  <main class="fixed inset-0 w-full h-full bg-black pt-24 overflow-hidden flex flex-col">
      
      <div class="absolute inset-0 opacity-20 pointer-events-none" 
           style="background-image: linear-gradient(#111 1px, transparent 1px), linear-gradient(90deg, #111 1px, transparent 1px); background-size: 40px 40px;">
      </div>

      <div class="flex-grow w-full h-full flex items-center justify-center relative z-10 px-6">
          <div class="w-full max-w-7xl">
            <PhoneDemo client:only="react" />
          </div>
      </div>

  </main>
</Layout>